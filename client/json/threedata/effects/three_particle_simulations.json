[
  {
    "PARTICLE_SIMULATIONS": {
      "THREE":[
        {
          "id":"gpu_test_simulation",
          "init_params":[
            {"param":"age",         "value":  {"min":0, "max":0}},
            {"param":"lifeTime",    "value":  {"min":1, "max":4}},
            {"param":"size",        "value":  {"min":0, "max":0}},
            {"param":"tiles",       "value":  {"min":0.5, "max":1}},
            {"param":"position",    "vec3":   {"x":0,   "y":0,   "z":0,          "spread":{"min":-0.1, "max":0.1}}},
            {"param":"offset",      "vec3":   {"x":0,   "y":0,   "z":0,          "spread":{"min":-0.2, "max":0.2}}},
            {"param":"acceleration","vec4":   {"x":1,   "y":-9.82,"z":1,  "w":0, "spread":{"min": 0,   "max":0}}},
            {"param":"velocity",    "vec4":   {"x":0,   "y":0,   "z":0,  "w":0,  "spread":{"min":-0.2, "max":0.2}}},
            {"param":"sizeCurve",   "curve1D":["zeroToOne"], "amplitude":10,     "spread":{"min":-0.5, "max":0}},
            {"param":"colorCurve",  "curve4D":["oneToZero", "oneZeroOne", "zeroToOne", "oneToZero"], "amplitudes":[1, 1, 1, 1], "spread":{"min":-0.2, "max":0}},
            {"param":"vertexColor", "vec4":   {"x":0.5, "y":0.5, "z":0.5, "w":1, "spread":{"min":-0.5, "max":0.5}}}
          ],
          "simulators":[
            {"process":"age",           "source":"age"        , "target":"age"          },
            {"process":"curve4DtoVec4", "source":"colorCurve" , "target":"vertexColor"  },
            {"process":"curve1DtoValue","source":"sizeCurve"  , "target":"size"         },
            {"process":"attrib1D",      "source":"lifeTime"   , "target":"duration"     },
            {"process":"attrib1D",      "source":"age"        , "target":"time"         },
            {"process":"attrib1D",      "source":"size"       , "target":"size"         },
            {"process":"attrib2D",      "source":"tiles"      , "target":"tileindex"    },
            {"process":"attrib3D",      "source":"position"   , "target":"offset"       },
            {"process":"attrib4D",      "source":"vertexColor", "target":"vertexColor"  },
            {"process":"attrib4D",      "source":"acceleration","target":"acceleration" },
            {"process":"attrib4D",      "source":"velocity",    "target":"velocity"     },
            {"process":"lifeTime",      "source":"age"        , "target":"lifeTime"     }
          ]
        },
        {
          "id":"test_simulation_cpu",
          "init_params":[
            {"param":"age",         "value":  {"min":0, "max":0}},
            {"param":"lifeTime",    "value":  {"min":1, "max":4}},
            {"param":"size",        "value":  {"min":0, "max":0}},
            {"param":"alpha",       "value":  {"x":1,   "y":1}},
            {"param":"tiles",       "value":  {"min":0.5, "max":1}},
            {"param":"gravity",     "vec3":   {"x":0,   "y":-9.81,"z":0,         "spread":{"min":-0,   "max":0}}},
            {"param":"position",    "vec3":   {"x":0,   "y":0,   "z":0,          "spread":{"min":-0.1, "max":0.1}}},
            {"param":"offset",      "vec3":   {"x":0,   "y":0,   "z":0,          "spread":{"min":-0.2, "max":0.2}}},
            {"param":"orientation", "quat":   {"x":0,   "y":1,   "z":0,  "w":1,  "spread":{"min":-0.5, "max":0.5}}},
            {"param":"velocity",    "vec3":   {"x":0,   "y":0,   "z":0,          "spread":{"min":-0.2, "max":0.2}}},
            {"param":"opacityCurve","curve1D":["oneToZero"], "amplitude":1,      "spread":{"min":-0.5, "max":0}},
            {"param":"sizeCurve",   "curve1D":["zeroToOne"], "amplitude":10,     "spread":{"min":-0.5, "max":0}},
            {"param":"colorCurve",  "curve3D":["oneToZero", "oneZeroOne", "zeroToOne"], "amplitudes":[1, 1, 1], "spread":{"min":-0.2, "max":0}},
            {"param":"vertexColor", "vec3":   {"x":0.5, "y":0.5, "z":0.5,         "spread":{"min":-0.5, "max":0.5}}}

          ],
          "simulators":[
            {"process":"age",           "source":"age"        , "target":"age"          },
            {"process":"curve3DtoVec3", "source":"colorCurve" , "target":"vertexColor"  },
            {"process":"addVelocity",   "source":"gravity"    , "target":"velocity"     },
            {"process":"addVelocity",   "source":"velocity"   , "target":"position"     },
            {"process":"valueToQuat",   "source":"age"        , "target":"orientation"  },
            {"process":"curve1DtoValue","source":"sizeCurve"  , "target":"size"         },
            {"process":"curve1DtoValue","source":"opacityCurve","target":"alpha"        },

            {"process":"attrib1D",      "source":"size"       , "target":"size"         },
            {"process":"attrib1D",      "source":"alpha"      , "target":"vertexAlpha"  },
            {"process":"attrib2D",      "source":"tiles"      , "target":"tileindex"    },
            {"process":"attrib4D",      "source":"orientation", "target":"orientation"  },
            {"process":"attrib3D",      "source":"position"   , "target":"offset"       },
            {"process":"attrib3D",      "source":"vertexColor", "target":"vertexColor"  },
            {"process":"lifeTime",      "source":"age"        , "target":"lifeTime"     }
          ]
        }
      ]
    }
  }
]
